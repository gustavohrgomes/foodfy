{% extends "main.njk" %}

{% block head %}

  <title>{{recipe.title}}</title>

{% endblock %}

{% block content %}

  <section class="recipe-single container">
    <div class="gallery">
      <div class="highlight">
        {% if not recipe.files[0] %}
          <img src="http://placehold.it/940x280?text={{recipe.title}}" alt="Imagem da receita {{recipe.title}}">
        {% else %}
          <img src="{{recipe.files[0].src}}" alt="{{recipe.title}}">
        {% endif %}
      </div>

      <div class="gallery-preview">
        {% for image in recipe.files %}      
          <img 
            src="{{image.src}}" 
            alt="{{image.name}}"
            {% if loop.index0 == 0 %}
            class="active"
            {% endif %}
            onclick="ImageGallery.setImage(event)"
          >
        {% endfor %}
      </div>
    </div>
  
    <div class="title">
      <h1>{{recipe.title}}</h1>
      <p>Por {{recipe.author}}</p>
    </div>

    <div id="ingredients" class="recipe-content recipe-hide">
      <div class="title">
        <h2>Ingredientes</h2>
        <p class="hide">ESCONDER</p>
      </div>

      <div class="content">
        <ul>
          {% for ingredients in recipe.ingredients %}
            <li>
              {{ingredients}}
            </li>
          {% endfor%}
        </ul>
      </div>
    </div>

    <div id="preparation" class="recipe-content recipe-hide">
      <div class="title">
        <h2>Modo de preparo</h2>
        <p class="hide">ESCONDER</p>
      </div>
      <div class="content">
        <ul>
          {% for ingredients in recipe.preparation %}
            <li>
              {{ingredients}}
            </li>
          {% endfor%}
        </ul>
      </div>
    </div>

    {% if recipe.information != '' %}
      <div id="information" class="recipe-content recipe-hide">
        <div class="title">
          <h2>Informações Adicionais</h2>
          <p class="hide">ESCONDER</p>
        </div>
        <div class="content">
          <p>{{recipe.information}}</p>
        </div>      
      </div>
    {% endif %}
  
  </section>

{% endblock %}