{% extends "main.njk" %}
{% import "parts/recipes-section.njk" as section %}

{% block head %}

	<title>Foodfy | Entre</title>

{% endblock %}

{% block content %}

<section class="forgot-password container">
  <form 
    method="POST" 
    action="/forgot-password"
  >
    <div class="header">
      <h3>Esqueceu a Senha?</h3>
    </div>

    <div class="fields">
      <div class="input-group">
        <label>E-mail</label>
        <input 
          type="email" 
          name="email"
          placeholder="Digite seu e-mail"
          value="{{ user.email }}"
          onblur="Validate.apply(this, 'isEmail')"
          required
        >
      </div>
    </div>

    <footer class="footer">
      <button type="submit">Recuperar</button>
    </footer>
  </form>
</section>

{% endblock %}
