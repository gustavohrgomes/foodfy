{% extends "layouts/main.njk" %}

{% block head %}

	<title>Foodfy - Receitas</title>

{% endblock %}

{% block searchFilter %}
  <form 
    class="filter" 
    action="/chefs?" 
    method="GET"
  >
    <input 
      type="text"
      name="filter"
      placeholder="Buscar por chef"
      value="{{ filter }}"
    >
    <button type="submit">Buscar</button>
  </form>
{% endblock %}

{% block content %}

	<section class="recipes-section container">
		<div class="chef-cards">
      {% for chef in chefs %}
        <div class="card-item" id="{{chef.id}}">

          <div class="card-item__image-container">
            <img src="{{chef.avatar_url}}" alt="chef {{chef.name}} image">
          </div>

          <div class="card-item__info">
            <div class="card-item__title">
              <p>{{chef.name}}</p>
            </div>

            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/js/scripts.js"></script>
{% endblock %}