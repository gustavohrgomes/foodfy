{% extends "public/layout.njk" %}

{% block head %}

	<title>Foodfy - Receitas</title>

{% endblock %}

{% block content %}

	<section class="recipes-section container">
		<div class="cards">
			{% for item in items %}
				<div class="card" id="{{loop.index0}}">
					<div class="card__image-container">
						<img src="{{item.image}}" alt="Burger">
					</div>
					<div class="card__title">
						<p>{{item.title}}</p>
					</div>
					<div class="card__description">
						<p>por {{item.author}}</p>
					</div>
				</div>
			{% endfor %}

			{% for item in items %}
