						<p>{{item.title}}</p>
					</div>
					<div class="card__description">
						<p>por {{item.author}}</p>
					</div>
				</div>
			{% endfor %}

	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/scripts.js"></script>
{% endblock %}