{% extends "admin.njk" %}

{% block head %}

  <title>{{recipe.title}}</title>

{% endblock %}

{% block content %}

  <section class="chef-single container">
    <div class="title">
      <h2>Chef: {{chef.name}}</h2>
      <a class="btn" href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
    </div>

    <div class="chef-img">
      {% if not chef.avatar_url %}
        <img src="http://placehold.it/200x200" alt="Image do chef {{chef.name}}">
      {% else %}
        <img src="{{chef.avatar_url}}" alt="imagem do chef {{chef.name}}">
      {% endif %}
    </div>

    <div class="title">
      <h1>{{chef.name}}</h1>
      <p>{{chef.total_recipes}} Receitas</p>
    </div>

    <section class="admin">
      <div class="title">
        <h2>Receitas</h2>
      </div>

      {% if chef.total_recipes == 0 %}
        <h3>Nenhuma receita cadastradas :(</h3>
      {% else %}
        <div class="recipes-container-adm">
          {% for recipe in recipes %}
            <div class="recipe">
              {% if not recipe.image %}
                <img src="http://placehold.it/600x280" alt="Image de {{recipe.title}}">
              {% else %}
                <img src="{{recipe.image}}" alt="Image de {{recipe.title}}">
              {% endif %}

              <div>
                <h3>{{recipe.title}}</h3>
                <p>por {{chef.name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </section>
  </section>

{% endblock %}

{% block scripts %}
  <script src="/js/scripts.js"></script>
{% endblock %}