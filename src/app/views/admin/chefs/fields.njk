<div class="input-group">
  <label>Nome</label>
  <div id="chef-name">
    {% if chef.name %}
      <div class="ingredients">
        <input 
          type="text" 
          name="name" 
          value="{{ chef.name }}"
        >
      </div>
    {% else %}
      <div class="ingredients">
        <input 
          type="text"
          name="name"
        >
      </div>
    {% endif %}
  </div>
</div>

<div class="input-group">
  <label>Avatar</label>
  <div id="photos-container">
    <div id="photos-upload">
      <input 
        id="photos-input"
        type="file"
        name="photos"
        accept="image/png, image/jpg, image/jpeg"
        onchange="PhotosUpload.handleFileInput(event)"
      >
      <i class="material-icons">add</i>
    </div>

    <div id="photos-preview">
      {% if chef.file %}
        <div id="{{chef.file.id}}" class="photo">
          <img src="{{chef.file.src}}" alt="{{chef.file.name}}">
          <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">close</i>
        </div>
        <input type="hidden" name="removed_files">
        <input type="hidden" name="file_id" value="{{chef.file.id}}">
      {% endif %}
    </div>
  </div>
  
</div>