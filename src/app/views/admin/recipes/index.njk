{% extends "admin.njk" %}

{% block head %}

	<title>Gerenciar receitas | Foodfy</title>

{% endblock %}

{% block content %}
	<section class="admin container">
    <div class="title">
      <h1>Gerenciar receitas</h1>
      <a class="btn" href="/admin/recipes/create">+ Nova Receita</a>
      
    </div>

		<div class="recipes-container-adm">
			{% for recipe in recipes %}
				<div class="recipe">
          {% if not recipe.img %}
            <img src="http://placehold.it/600x280" alt="Image de {{recipe.title}}">
          {% else %}
            <img src="{{recipe.img}}" alt="Image de {{recipe.title}}">
          {% endif %}
					
					<div>
            <h3>{{recipe.title}}</h3>
            <p>por {{recipe.author}}</p>
            <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
					</div>
				</div>
			{% endfor %}
    </div>

    {% include "parts/pagination.njk" %}
	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/js/scripts.js"></script>
{% endblock %}