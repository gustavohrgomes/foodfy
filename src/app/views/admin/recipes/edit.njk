{% extends "admin.njk" %}

{% block head %}

	<title>Foodfy - Editando Receita</title>

{% endblock %}

{% block content %}
	<section class="recipe-single container">
		<form 
      method="POST" 
      action="/admin/recipes?_method=PUT"
      enctype="multipart/form-data"
    >
			<div class="title">
				<h2>Editando Receita</h2>
				<div class="button-container">
					<button 
						class="btn-delete" 
						type="submit" 
						form="form-delete"
					>
						Deletar
					</button>
					<button type="submit">Salvar Receita</button>
				</div>
			</div>

			{% include "admin/recipes/fields.njk" %}

			<input type="hidden" name="id" value="{{recipe.id}}">
		</form>
		<form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
			<input type="hidden" name="id" value="{{recipe.id}}">
		</form>
	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/js/scripts.js"></script>
	<script src="/js/confirm.js"></script>
	<script src="/js/addField.js"></script>
{% endblock %}