<fieldset class="admin__input-group">
  <legend>Título da receita</legend>
  <input 
    type="text" 
    name="title" 
    value="{{ recipe.title }}"
  >
</fieldset>

<fieldset class="admin__input-group">
  <legend>Imagem da receita</legend>
  <div id="photos-container">
    <div id="photos-upload">
      <input 
        id="photos-input"
        type="file" 
        name="photos" 
        multiple
        accept="image/png, image/jpeg, image/jpg"
        onchange="PhotosUpload.handleFileInput(event)"
      >
      <i class="material-icons">add</i>
    </div>
    <div id="photos-preview">
      {% if files %}
        {% for image in files %}
          <div id="{{image.id}}" class="photo">
            <img src="{{image.src}}" alt="{{image.name}}">
            <i class="material-icons">close</i>
          </div>
        {% endfor %}
        <input type="hidden" name="removed_files">
      {% endif %}
    </div>
  </div>
</fieldset>

<fieldset class="admin__input-group">
  <legend>Chef</legend>
  <select name="chef">
    <option selected value="" disabled hidden >Selecione um Chef</option>
    {% for chef in chefOptions %}
      <option 
        value="{{chef.id}}" 
        {% if recipe.chef_id == chef.id %} 
          selected="selected" 
        {% endif %}
      >
        {{chef.name}} 
      </option>
    {% endfor %}
  </select>
</fieldset>

<fieldset class="admin__input-group">
  <legend>Ingredientes</legend>

  <div id="ingredients">
    {% if recipe.ingredients %}
      {% for ingredient in recipe.ingredients %}
        <div class="ingredients__input">
          <input 
            type="text" 
            name="ingredients[]" 
            value="{{ ingredient }}" 
          >
        </div>
      {% endfor %}
    {% else %}
      <div class="ingredients__input">
        <input 
          type="text" 
          name="ingredients"
        >
      </div>
    {% endif %}
  </div>

  <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</fieldset>

<fieldset class="admin__input-group">
  <legend>Modo de preparo</legend>

  <div id="preparing">
    {% if recipe.preparation %}
      {% for preparation in recipe.preparation %}
        <div class="preparing__input">
          <input 
            type="text" 
            name="preparation[]" 
            value="{{ preparation }}"
          >
        </div>
      {% endfor %}
    {% else %}  
      <div class="preparing__input">
        <input 
          type="text" 
          name="preparation"
        >
      </div>
    {% endif %}
  </div>

  <button type="button" class="add-preparing">Adicionar novo passo</button>
</fieldset>

<fieldset class="admin__input-group">
  <legend>Informações adicionais</legend>
  {% if recipe.information %}
    <textarea class="aditional-info" name="information">{{ recipe.information }}</textarea>
  {% else %}
    <textarea   
      class="aditional-info" 
      name="information"
    ></textarea>
  {% endif %}
  
  
</fieldset>

