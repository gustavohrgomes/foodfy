{% extends "admin.njk" %}

{% block head %}

	<title>Foodfy | Editar Usuário</title>

{% endblock %}

{% block content %}
	<section class="user container">
		<form 
      method="POST" 
      action="/admin/users/{{user.id}}?_method=PUT"
    >
			<div class="title">
				<h2>Editar Usuário</h2>
				<button type="submit" onclick="Validate.allFields(event)">Salvar</button>
			</div>

      <div class="fields">
			  {% include "admin/users/fields.njk" %}
      </div>

      <input type="hidden" name="id" value="{{user.id}}">

		</form>
	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/js/scripts.js"></script>
{% endblock %}