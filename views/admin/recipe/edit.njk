{% extends "admin/layout.njk" %}

{% block head %}

	<title>Foodfy - Editando Receita</title>

{% endblock %}

{% block content %}
	<section id="admin-recipes" class="container">
		<form method="POST" action="/admin/recipes?_method=PUT">
			<div class="recipe__header">
				<h2>Editando Receita</h2>
				<div class="form__button-container">
					<button class="form__button-delete" type="submit">Deletar</button>
					<button type="submit">Salvar Receita</button>
				</div>
			</div>

			{% include "admin/recipe/fields.njk" %}

		</form>
	</section>
	
{% endblock %}

{% block scripts %}
	<script src="/scripts.js"></script>
{% endblock %}