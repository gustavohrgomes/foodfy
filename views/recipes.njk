						<p>{{item.title}}</p>
					</div>
					<div class="card__description">
						<p>por {{item.author}}</p>
					</div>
				</div>
			{% endfor %}

	</section>

	<footer class="footer">
		<p>Todos direitos reservados, receitas Foodfy.</p>
	</footer>

	<script src="/scripts.js"></script>

{% endblock %}